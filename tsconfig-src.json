{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "#/*": ["./src/*"]
    },

    // Defaults from running `npx tsc --init`:
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
